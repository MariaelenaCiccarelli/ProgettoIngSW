<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LootMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/Red</item>
        <item name="colorPrimaryVariant">@color/Gold</item>
        <item name="android:statusBarColor">@color/Gold</item>

    </style>

    <style name="Theme.LootMarket" parent="Base.Theme.LootMarket" />

    <style name="Theme.App.Splashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/LightGold</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_lootmarket_logo_rotondo_lightgold</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.LootMarket</item>
    </style>

    <style name="Theme.BottomNavigationNavBar" parent="Base.Theme.LootMarket" />

    <style name = "App.custom.Indicator" parent= "Widget.Material3.BottomNavigationView.ActiveIndicator">

        <item name="android:color">@color/Red</item>
    </style>
</resources>