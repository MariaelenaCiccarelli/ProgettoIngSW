<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@color/LightGold">

    <ImageView
        android:id="@+id/logoPaginaSignup"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lootmarket_logo_rotondo_lightgold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/testoRegistratiPaginaSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Registrati"
        android:textColor="@color/LightRed"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoPaginaSignup">
    </TextView>

    <TextView
        android:id="@+id/testoEmailLabelPaginaSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Email"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoRegistratiPaginaSignup">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmailPaginaSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoEmailLabelPaginaSignup">

        <EditText
            android:id="@+id/editTextEmailPaginaSignup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/GoldBackground"
            android:fontFamily="@font/roboto_medium"
            android:hint="latuaemail@email.com"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/DarkRed"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testoPasswordLabelPaginaSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Password"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardEmailPaginaSignup">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPasswordPaginaSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoPasswordLabelPaginaSignup">

        <EditText
            android:id="@+id/editTextPasswordPaginaSignup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/GoldBackground"
            android:fontFamily="@font/roboto_medium"
            android:hint="LaTuaPassword"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/DarkRed"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/checkboxTerminiPaginaSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardPasswordPaginaSignup">
    </CheckBox>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTestoTerminiPaginaSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:outlineSpotShadowColor="@color/LightGold"
        android:backgroundTint="@color/LightGold"
        app:layout_constraintStart_toEndOf="@+id/checkboxTerminiPaginaSignup"
        app:layout_constraintTop_toBottomOf="@+id/cardPasswordPaginaSignup">

        <TextView
            android:id="@+id/testoTerminiPaginaSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Accetto i termini e le condizioni d’uso e vendita di Loot Market."
            android:textColor="@color/LightRed">
            </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBottoneRegistratiPaginaSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/Red"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardTestoTerminiPaginaSignup">

        <Button
            android:id="@+id/bottoneRegistratiPaginaSignup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/LightRed"
            android:text="Continua"
            android:textAllCaps="false"
            android:textColor="@color/GoldBackground"
            android:textSize="18sp">
        </Button>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testoDomandaPaginaSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Hai già un account?"
        android:textColor="@color/DarkRed"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardBottoneRegistratiPaginaSignup">
    </TextView>

    <Button
        android:id="@+id/bottoneAccediPaginaSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:text="@string/bottoneAccediPaginaSignup"
        android:textAllCaps="false"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardBottoneRegistratiPaginaSignup">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>