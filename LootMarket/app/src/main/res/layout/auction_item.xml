<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/GoldBackground"
    android:id="@+id/cardAuctionItem"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/testoTitoloAstaAuctionItem"
                android:layout_width="355dp"
                android:layout_height="25dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Titolo Asta"
                android:layout_marginStart="5dp"
                android:textColor="@color/DarkRed"
                android:maxLines="1"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="14sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />
            <TextView
                android:id="@+id/testoUltimaOffertaAuctionItem"
                android:layout_width="130dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Ultima Offerta: 40â‚¬"
                android:textColor="@color/LightRed"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                android:layout_marginStart="125dp"
                android:layout_marginEnd="10dp">
            </TextView>
            <TextView
                android:id="@+id/testoTempoRimanenteAuctionItem"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="40h rim."
                android:maxLines="1"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/LightRed"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:textSize="12sp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/GoldBackground"
                app:cardCornerRadius="16dp"
                android:elevation="4dp"
                android:id="@+id/cardImmagineAuctionItem"
                app:strokeColor="@color/DarkRed"
                app:strokeWidth="2dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/immagineAuctionItem">
                </ImageView>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/testoDescrizioneAuctionItem"
                android:layout_width="240dp"
                android:layout_height="80dp"
                android:layout_marginTop="55dp"
                android:layout_marginStart="125dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="5"
                android:textColor="@color/DarkRed"
                android:text="lorem ipsum, quia dolor sit, amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt, ut labore et dolore magnam aliquam quaerat voluptatem."
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>