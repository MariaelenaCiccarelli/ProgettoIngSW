<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity"
    android:background="@color/LightGold">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardSearchBarFrammentoSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/GoldScuro"
        app:cardCornerRadius="0dp">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchbarFrammentoSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="12dp"
            android:background="@drawable/search_bkg"
            android:focusable="false"
            app:closeIcon="@drawable/baseline_clear_24"
            app:iconifiedByDefault="false"
            app:queryHint="Cerca..."
            app:searchHintIcon="@null"
            android:backgroundTint="@color/GoldBackground"
            app:searchIcon="@drawable/baseline_search_24colored">
        </androidx.appcompat.widget.SearchView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:id="@+id/cardFiltroFumettiFrammentoSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardFiltroActionFiguresFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardSearchBarFrammentoSearch"
        app:cardCornerRadius="45dp"
        android:backgroundTint="@color/GoldBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:src="@drawable/baseline_auto_stories_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewFiltroFumettiFrammentoSearch"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Fumetti &amp; Manga"
        android:textColor="@color/DarkRed"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewFiltroActionFiguresFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardFiltroFumettiFrammentoSearch"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/cardFiltroActionFiguresFrammentoSearch"
        app:layout_constraintEnd_toStartOf="@id/cardFiltroCarteFrammentoSearch"
        app:layout_constraintStart_toEndOf="@+id/cardFiltroFumettiFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardSearchBarFrammentoSearch"
        app:cardCornerRadius="45dp"
        android:backgroundTint="@color/GoldBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/baseline_man_4_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewFiltroActionFiguresFrammentoSearch"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Action Figures"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/DarkRed"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toStartOf="@id/textViewFiltroCarteFrammentoSearch"
        app:layout_constraintStart_toEndOf="@id/textViewFiltroFumettiFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardFiltroActionFiguresFrammentoSearch">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"

        android:id="@+id/cardFiltroCarteFrammentoSearch"
        app:layout_constraintEnd_toStartOf="@id/cardFiltroTavoleFrammentoSearch"
        app:layout_constraintStart_toEndOf="@+id/cardFiltroActionFiguresFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardSearchBarFrammentoSearch"
        app:cardCornerRadius="45dp"
        android:backgroundTint="@color/GoldBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:src="@drawable/baseline_screenshot_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewFiltroCarteFrammentoSearch"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Carte Collez."
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/DarkRed"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardFiltroCarteFrammentoSearch">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/cardFiltroTavoleFrammentoSearch"
        app:layout_constraintEnd_toStartOf="@id/cardFiltroGadgetFrammentoSearch"
        app:layout_constraintStart_toEndOf="@+id/cardFiltroCarteFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardSearchBarFrammentoSearch"
        app:cardCornerRadius="45dp"
        android:backgroundTint="@color/GoldBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/baseline_brush_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewFiltroTavoleFrammentoSearch"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Tavole Originali"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/DarkRed"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toStartOf="@id/textViewFiltroGadgetFrammentoSearch"
        app:layout_constraintStart_toEndOf="@id/textViewFiltroCarteFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardFiltroTavoleFrammentoSearch">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFiltroGadgetFrammentoSearch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/GoldBackground"
        app:cardCornerRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardFiltroTavoleFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardSearchBarFrammentoSearch">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/baseline_catching_pokemon_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewFiltroGadgetFrammentoSearch"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Gadget e altro"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/DarkRed"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewFiltroTavoleFrammentoSearch"
        app:layout_constraintTop_toBottomOf="@+id/cardFiltroGadgetFrammentoSearch">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/textViewRicercaFrammentoSearch"
        android:text="Aste trovate in base alla ricerca:"
        android:textColor="@color/DarkRed"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFiltroActionFiguresFrammentoSearch" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewFrammentoSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/textViewRicercaFrammentoSearch"/>


</androidx.constraintlayout.widget.ConstraintLayout>