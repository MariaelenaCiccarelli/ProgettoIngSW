<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/GoldBackground"
    android:id="@+id/cardNotificationItem"
    app:cardUseCompatPadding="true">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTitoloNotificationItem"
                android:layout_width="230dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="2"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="Titolo Notifica"
                android:textColor="@color/DarkRed"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardImmagineNotificationItem"
                app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textViewTestoNotificationItem"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toBottomOf="@id/textViewTitoloNotificationItem"
                    app:layout_constraintStart_toEndOf="@id/cardImmagineNotificationItem"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLines="3"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/DarkRed"
                    android:text="lorem ipsum, quia dolor sit, amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt, ut labore et dolore magnam aliquam quaerat voluptatem."
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform">
                </TextView>




            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/GoldBackground"
                app:cardCornerRadius="16dp"
                android:elevation="4dp"
                android:id="@+id/cardImmagineNotificationItem"
                app:strokeColor="@color/DarkRed"
                app:strokeWidth="2dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/immagineNotificationItem">
                </ImageView>
            </com.google.android.material.card.MaterialCardView>




        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>