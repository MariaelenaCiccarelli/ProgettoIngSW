<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.HomeActivity"
    android:background="@color/LightGold">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBottoneProprieFrammentoAuctions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardBottoneStoricoFrammentoAuctions"
            android:layout_marginTop="10dp"

            app:cardBackgroundColor="@color/GoldBackground">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonProprieFrammentoAuctions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Proprie"
                android:textSize="18sp"
                app:cornerRadius="0dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/DarkRed"
                android:backgroundTint="@color/GoldBackground">
            </com.google.android.material.button.MaterialButton>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBottoneIscrizioniFrammentoAuctions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardBottoneProprieFrammentoAuctions"
            android:layout_marginTop="10dp"

            app:cardBackgroundColor="@color/GoldBackground">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonIscrizioniFrammentoAuctions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Iscrizioni"
                android:textSize="18sp"
                app:cornerRadius="0dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/DarkRed"
                android:backgroundTint="@color/GoldBackground">
            </com.google.android.material.button.MaterialButton>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBottoneStoricoFrammentoAuctions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardBottoneIscrizioniFrammentoAuctions"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/GoldBackground">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonStoricoFrammentoAuctions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Storico"
                android:textSize="18sp"
                app:cornerRadius="0dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/DarkRed"
                android:backgroundTint="@color/GoldBackground">
            </com.google.android.material.button.MaterialButton>


        </androidx.cardview.widget.CardView>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:id="@+id/frameContainerFrammentoAuctions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBottoneIscrizioniFrammentoAuctions">
        </androidx.fragment.app.FragmentContainerView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>