<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataProfileActivity"
    android:background="@color/LightGold">

    <TextView
        android:id="@+id/testoITuoiDatiPaginaProfileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="I Tuoi Dati"
        android:textColor="@color/LightRed"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/testoNomeLabelPaginaProfileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Nome"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoITuoiDatiPaginaProfileData">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNomePaginaProfileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        android:backgroundTint="@color/GoldBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoNomeLabelPaginaProfileData">

        <EditText
            android:id="@+id/editTextNomePaginaProfileData"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:hint="Il tuo nome"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/DarkRed"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testoCognomeLabelPaginaProfileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Cognome"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNomePaginaProfileData"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCognomePaginaProfileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/GoldBackground"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoCognomeLabelPaginaProfileData">

        <EditText
            android:id="@+id/editTextCognomePaginaProfileData"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:fontFamily="@font/roboto_medium"
            android:hint="Il tuo cognome"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/DarkRed"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testoCodiceFiscaleLabelPaginaProfileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Codice Fiscale"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCognomePaginaProfileData"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCodiceFiscalePaginaProfileData"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/GoldBackground"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        app:layout_constraintTop_toBottomOf="@+id/testoCodiceFiscaleLabelPaginaProfileData">

        <EditText
            android:id="@+id/editTextCodiceFiscalePaginaProfileData"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:hint="Il tuo codice fiscale"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/DarkRed"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testoNazioneLabelPaginaProfileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Nazione"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCodiceFiscalePaginaProfileData"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNazioneFiscalePaginaProfileData"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        android:backgroundTint="@color/GoldBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoNazioneLabelPaginaProfileData">

        <Spinner
            android:id="@+id/spinnerNazionePaginaProfileData"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </Spinner>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testoCellulareLabelPaginaProfileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Cellulare"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNazioneFiscalePaginaProfileData"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCellularePaginaProfileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        android:backgroundTint="@color/GoldBackground"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoCellulareLabelPaginaProfileData">

        <EditText
            android:id="@+id/editTextCellularePaginaProfileData"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:hint="Il tuo numero di cellulare"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/DarkRed"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testoDataDiNascitaLabelPaginaProfileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Data di Nascita"
        android:textColor="@color/LightRed"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCellularePaginaProfileData"></TextView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDataDiNascitaPaginaProfileData"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoDataDiNascitaLabelPaginaProfileData"
        app:strokeColor="@color/DarkRed"
        app:strokeWidth="2dp">

        <DatePicker
            android:id="@+id/datePickerPaginaProfileData"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:background="@color/GoldBackground">
        </DatePicker>
    </com.google.android.material.card.MaterialCardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardBottoneConfermaPaginaProfileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/Red"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardDataDiNascitaPaginaProfileData">

        <Button
            android:id="@+id/bottoneConfermaPaginaProfileData"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/LightRed"
            android:text="Conferma"
            android:textAllCaps="false"
            android:textColor="@color/GoldBackground"
            android:textSize="18sp"></Button>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>